<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
   android:background="#05a5fc"
    >

    <ImageView
        android:id="@+id/imgprofilephoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txtnameofuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name of the user"
        android:layout_below="@id/imgprofilephoto"
        android:textSize="22sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtphnnumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="+91 9873240024"
        android:textSize="22sp"
        android:layout_below="@id/txtnameofuser"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"/>

</RelativeLayout>