<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="#05a5fc">
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo1"
        />
    <EditText
        android:id="@+id/etmobilenum"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Mobile Number (10 digits)"
        android:layout_below="@+id/imglogo"
        android:layout_margin="25dp"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="29dp"
        android:background="@drawable/roundededittext"

        >
    </EditText>

    <ImageView
        android:id="@id/imgmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/etmobilenum"
        android:paddingTop="30dp"
        android:paddingLeft="3dp"
        android:src="@drawable/mobile"
        android:layout_below="@+id/imglogo"
        />


    <EditText
        android:id="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Password"
        android:layout_below="@+id/etmobilenum"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="29dp"
        android:background="@drawable/roundededittext"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password"
        android:layout_below="@+id/imgmobile"
        android:paddingTop="35dp"
        android:paddingLeft="28dp"
        />
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@id/etpassword"
        android:layout_marginTop="25dp"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="23dp"
        android:background="#143bc7"
       android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/txtforgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnlogin"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/txtregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        />


</RelativeLayout>